+	</xsl:template>
+
+	<xsl:template
+		match="body/sec/sec/sec/title">
+		<xsl:choose>
+			<xsl:when test="local-name(following-sibling::node()[1])='sec'">
+				<em>
+					<xsl:apply-templates/>
+				</em>
+				<xsl:call-template name="nl-1"/>
